<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_one_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_welfare"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:layout_margin="10dip"
        android:visibility="gone"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/layout_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:paddingRight="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/cc_black"
            android:textSize="@dimen/font_sixteen" />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_margin="10dip"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textColor="@color/instructions_gray"
            android:textSize="@dimen/font_fourteen" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_author"
            android:textColor="@color/instructions_gray"
            android:textSize="@dimen/font_fourteen" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:textColor="@color/instructions_gray"
            android:textSize="@dimen/font_fourteen" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line" />
</LinearLayout>