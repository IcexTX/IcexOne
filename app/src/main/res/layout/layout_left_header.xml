<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dip"
    android:background="@drawable/icon_left_page"
    android:orientation="vertical">

    <com.example.icex.icexone.view.RoundImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/icon_header"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:id="@+id/imageView" />


    <TextView
        android:id="@+id/tv_author"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dip"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="半指烟城"
        android:textColor="@color/white"
        android:textSize="@dimen/font_sixteen"/>

    <TextView
        android:background="@drawable/author_text_style"
        android:layout_width="wrap_content"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:paddingBottom="1dip"
        android:paddingTop="2dip"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Lv.7"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_marginLeft="10dip"
        android:textSize="@dimen/font_fourteen"
        android:layout_alignBaseline="@+id/tv_author"
        android:layout_toRightOf="@+id/tv_author" />

</RelativeLayout>