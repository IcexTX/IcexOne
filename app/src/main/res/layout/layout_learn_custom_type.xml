<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/instructions_gray"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            android:textSize="@dimen/font_sixteen"
            android:text="选择分类"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/layout_all"
            android:layout_marginLeft="15dip"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_all"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="全部"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:id="@+id/layout_ios"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_ios"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="iOS"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:id="@+id/layout_app"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_app"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="App"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:id="@+id/layout_web"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_web"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="前端"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:id="@+id/layout_recommend"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_recommend"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="瞎推荐"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:id="@+id/layout_movie"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_movie"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="休息视频"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="15dip"
            android:id="@+id/layout_resources"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/learn_daily_day_resources"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/daily_day_text"
                android:layout_margin="10dip"
                android:textSize="@dimen/font_sixteen"
                android:text="拓展资源"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>