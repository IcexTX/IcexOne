<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="4dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fourth_one"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@mipmap/img_one_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_fourth_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="10dip"
                android:textColor="@color/daily_day_text"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fourth_two"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@mipmap/img_one_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_fourth_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/daily_day_text"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="4dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fourth_three"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@mipmap/img_one_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_fourth_three_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="10dip"
                android:textColor="@color/daily_day_text"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fourth_four"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@mipmap/img_one_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_fourth_four_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/daily_day_text"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>