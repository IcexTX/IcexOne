<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/horizontal_line"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="3dip"
            android:layout_height="15dip"
            android:layout_margin="5dip"
            android:background="@drawable/custom_line_style" />

        <TextView
            android:id="@+id/tv_custom_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/black"
            android:textSize="@dimen/font_sixteen" />

        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/custom_type_style"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="2dip"
                android:src="@mipmap/custom_catalogue_bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical"
                android:text="选择分类"
                android:textColor="@color/instructions_gray"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/horizontal_line" />

</LinearLayout>