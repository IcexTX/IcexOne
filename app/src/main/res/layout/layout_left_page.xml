<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="none">

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            app:headerLayout="@layout/layout_left_header"
            app:menu="@menu/left_menu_item" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/division_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_mode"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/main_left_page_style"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_mode"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/afr" />

            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dip"
                android:text="@string/night_mode"
                android:textColor="@color/content_font"
                android:textSize="@dimen/font_fourteen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_setting"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_left_page_style"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_margin="5dip"
                android:background="@drawable/afs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:textColor="@color/content_font"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_exit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_left_page_style"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_margin="5dip"
                android:background="@drawable/afj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:textColor="@color/content_font"
                android:textSize="@dimen/font_fourteen" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>